#!/usr/bin/env ruby
require 'pathname' #detecting the correct path of a file even if its a symlink
require File.dirname(Pathname.new(__FILE__).realpath) + "/lib/fresnel"
require File.dirname(Pathname.new(__FILE__).realpath) + "/lib/cli"

COLOR=false
CACHE=true
CACHE_TIMEOUT=500.seconds
TERM_SIZE=80
DEBUG=false

Signal.trap("SIGINT") {
  puts "Stopping..."
  exit(0)
}

Cli.new(ARGV).run!